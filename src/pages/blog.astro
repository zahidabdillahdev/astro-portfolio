---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BlogList from "../components/BlogList.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Navbar />
  <main>
    <section class="mx-auto w-full max-w-6xl px-6 pt-16">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
        Writing
      </p>
      <h1 class="mt-3 font-display text-4xl font-semibold text-white">
        Notes on delivery, operations, and reliable systems.
      </h1>
      <p class="mt-4 max-w-2xl text-slate-300">
        Practical guidance drawn from real production work and team collaboration.
      </p>
    </section>
    <BlogList />
  </main>
  <Footer />
</Layout>
