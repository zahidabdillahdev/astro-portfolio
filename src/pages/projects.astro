---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Projects from "../components/Projects.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Navbar />
  <main>
    <section class="mx-auto w-full max-w-6xl px-6 pt-16">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
        Projects Archive
      </p>
      <h1 class="mt-3 font-display text-4xl font-semibold text-white">
        Work focused on clarity, reliability, and measurable outcomes.
      </h1>
      <p class="mt-4 max-w-2xl text-slate-300">
        A curated view of infrastructure programs, automation work, and platform decisions.
      </p>
    </section>
    <Projects />
  </main>
  <Footer />
</Layout>
