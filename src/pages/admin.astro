---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const quickStats = [
  { label: "Projects", value: "12", note: "3 in draft" },
  { label: "Blog Posts", value: "18", note: "5 scheduled" },
  { label: "Last Publish", value: "Feb 06, 2026", note: "2 updates" },
];

const activity = [
  {
    title: "FinOps Cost Optimizer",
    type: "Project",
    status: "Draft",
    updated: "Today, 09:42",
  },
  {
    title: "Zero-Downtime Deployments",
    type: "Blog",
    status: "Scheduled",
    updated: "Yesterday, 18:10",
  },
  {
    title: "Edge Observability Suite",
    type: "Project",
    status: "Published",
    updated: "Feb 03, 2026",
  },
];
---

<Layout>
  <Navbar />
  <main class="mx-auto w-full max-w-6xl px-6 py-16">
    <section class="space-y-10">
      <div class="flex flex-wrap items-center justify-between gap-6">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
            Admin Dashboard
          </p>
          <h1 class="mt-3 font-display text-3xl font-semibold text-slate-900">
            Manage projects and blog content.
          </h1>
          <p class="mt-3 max-w-2xl text-slate-600">
            Protected by Cloudflare Access. Connect the CRUD endpoints to manage the portfolio
            and publish updates.
          </p>
        </div>
        <div class="flex flex-wrap items-center gap-3">
          <button
            class="inline-flex items-center gap-2 rounded-full border border-slate-300 px-5 py-2 text-sm font-semibold text-slate-700"
            type="button"
          >
            Export Data
            <iconify-icon icon="ph:download-bold"></iconify-icon>
          </button>
          <button
            class="inline-flex items-center gap-2 rounded-full bg-slate-900 px-5 py-2 text-sm font-semibold text-white"
            type="button"
          >
            New Update
            <iconify-icon icon="ph:plus-bold"></iconify-icon>
          </button>
        </div>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        {quickStats.map((stat) => (
          <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-500">
              {stat.label}
            </p>
            <p class="mt-4 text-3xl font-semibold text-slate-900">{stat.value}</p>
            <p class="mt-2 text-sm text-slate-600">{stat.note}</p>
          </div>
        ))}
      </div>

      <div class="grid gap-6 lg:grid-cols-[1.2fr_0.8fr]">
        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center justify-between">
            <h2 class="font-display text-lg font-semibold text-slate-900">
              Recent Activity
            </h2>
            <button
              class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-500"
              type="button"
            >
              View all
            </button>
          </div>
          <div class="mt-6 space-y-4">
            {activity.map((item) => (
              <div class="flex flex-wrap items-center justify-between gap-4 rounded-2xl border border-slate-200 px-4 py-3">
                <div>
                  <p class="text-sm font-semibold text-slate-900">{item.title}</p>
                  <p class="text-xs text-slate-500">{item.type}</p>
                </div>
                <div class="text-right">
                  <p class="text-xs font-semibold text-slate-600">{item.status}</p>
                  <p class="text-xs text-slate-400">{item.updated}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <h2 class="font-display text-lg font-semibold text-slate-900">
            Quick Actions
          </h2>
          <div class="mt-5 space-y-4">
            <button
              class="flex w-full items-center justify-between rounded-2xl border border-slate-200 px-4 py-3 text-sm font-semibold text-slate-700"
              type="button"
            >
              Create New Project
              <iconify-icon icon="ph:arrow-right-bold"></iconify-icon>
            </button>
            <button
              class="flex w-full items-center justify-between rounded-2xl border border-slate-200 px-4 py-3 text-sm font-semibold text-slate-700"
              type="button"
            >
              Draft Blog Post
              <iconify-icon icon="ph:arrow-right-bold"></iconify-icon>
            </button>
            <button
              class="flex w-full items-center justify-between rounded-2xl border border-slate-200 px-4 py-3 text-sm font-semibold text-slate-700"
              type="button"
            >
              Manage Tags
              <iconify-icon icon="ph:arrow-right-bold"></iconify-icon>
            </button>
          </div>
        </div>
      </div>

      <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="flex flex-wrap items-center justify-between gap-4">
          <div>
            <h2 class="font-display text-lg font-semibold text-slate-900">
              Content Queue
            </h2>
            <p class="text-sm text-slate-600">
              Review drafts and publish updates to the public site.
            </p>
          </div>
          <div class="flex flex-wrap items-center gap-2">
            <button
              class="rounded-full border border-slate-300 px-4 py-2 text-xs font-semibold text-slate-600"
              type="button"
            >
              Projects
            </button>
            <button
              class="rounded-full border border-slate-900 bg-slate-900 px-4 py-2 text-xs font-semibold text-white"
              type="button"
            >
              Blog
            </button>
          </div>
        </div>
        <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200">
          <div class="grid grid-cols-[1.4fr_0.8fr_0.8fr_0.6fr] gap-4 bg-slate-50 px-4 py-3 text-xs font-semibold uppercase tracking-[0.2em] text-slate-500">
            <span>Title</span>
            <span>Status</span>
            <span>Updated</span>
            <span>Action</span>
          </div>
          <div class="divide-y divide-slate-200">
            {activity.map((item) => (
              <div class="grid grid-cols-[1.4fr_0.8fr_0.8fr_0.6fr] gap-4 px-4 py-4 text-sm">
                <span class="font-semibold text-slate-900">{item.title}</span>
                <span class="text-slate-600">{item.status}</span>
                <span class="text-slate-500">{item.updated}</span>
                <button
                  class="text-left text-sm font-semibold text-slate-700"
                  type="button"
                >
                  Open
                </button>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
