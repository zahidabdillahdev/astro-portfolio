      refreshButton.addEventListener("click", fetchData);
    }

    const bindListHandlers = (target, type, form, submitButton, statusEl, defaultLabel, items) => {
      if (!target) return;
      target.addEventListener("click", async (event) => {
        const button = event.target.closest("button");
        if (!button) return;
        const id = button.dataset.id;
        if (!id) return;
        if (button.hasAttribute("data-delete")) {
          await handleDelete(id, type);
          return;
        }
        if (button.hasAttribute("data-edit")) {
          const handler = attachRowHandlers(items, form, submitButton, statusEl, defaultLabel, type);
          handler?.(event);
        }
      });
    };

    const fetchAndBind = async () => {
      try {
        const [projectsResponse, blogsResponse, toolsResponse, certResponse] = await Promise.all([
          fetch("/api/projects"),
          fetch("/api/blogs"),
          fetch("/api/tools"),
          fetch("/api/certifications"),
        ]);

        const projectsJson = await projectsResponse.json();
        const blogsJson = await blogsResponse.json();
        const toolsJson = await toolsResponse.json();
        const projects = projectsJson.data ?? [];
        const blogs = blogsJson.data ?? [];
        const tools = toolsJson.data ?? [];
        const certs = certResponse.ok ? (await certResponse.json()).data ?? [] : [];

        renderRows(filterItems(projects, projectFilter?.value), projectList, "project");
        renderRows(filterItems(blogs, blogFilter?.value), blogList, "blog");
        renderTools(filterItems(tools, toolFilter?.value));
        renderCertifications(filterItems(certs, certFilter?.value));

        bindListHandlers(
          projectList,
          "project",
          projectForm,
          projectSubmit,
          projectStatus,
          "Create Project",
          projects
        );
        bindListHandlers(
          blogList,
          "blog",
          blogForm,
          blogSubmit,
          blogStatus,
          "Create Blog Post",
          blogs
        );
        bindListHandlers(
          toolList,
          "tool",
          toolForm,
          toolSubmit,
          toolStatus,
          "Create Tool",
          tools
        );
        bindListHandlers(
          certList,
          "cert",
          certForm,
          certSubmit,
          certStatus,
          "Create Certification",
          certs
        );

        if (projectFilter) {
          projectFilter.onchange = () =>
            renderRows(filterItems(projects, projectFilter.value), projectList, "project");
        }
        if (blogFilter) {
          blogFilter.onchange = () =>
            renderRows(filterItems(blogs, blogFilter.value), blogList, "blog");
        }
        if (toolFilter) {
          toolFilter.onchange = () => renderTools(filterItems(tools, toolFilter.value));
        }
        if (certFilter) {
          certFilter.onchange = () => renderCertifications(filterItems(certs, certFilter.value));
        }
      } catch (error) {
        if (projectList) {
          projectList.innerHTML = '<div class="px-4 py-4 text-sm text-rose-400">Failed to load.</div>';
        }
        if (blogList) {
          blogList.innerHTML = '<div class="px-4 py-4 text-sm text-rose-400">Failed to load.</div>';
        }
        if (toolList) {
          toolList.innerHTML = '<div class="px-4 py-4 text-sm text-rose-400">Failed to load.</div>';
        }
        if (certList) {
          certList.innerHTML = '<div class="px-4 py-4 text-sm text-rose-400">Failed to load.</div>';
        }
      }
    };

    const updateAssetText = (type, key) => {
      const el = assetCurrent[type];
      if (!el) return;
      el.textContent = key ? `Current: ${key}` : "No file uploaded yet.";
    };

    const fetchProfileAssets = async () => {
      try {
        const response = await fetch("/api/profile-assets");
        if (!response.ok) throw new Error("Failed");
        const json = await response.json();
        const data = json.data ?? {};
        updateAssetText("avatar", data.avatar_key);
        updateAssetText("photo", data.photo_key);
        updateAssetText("resume", data.resume_key);
        uploadForms.forEach((form) => {
          const type = form.dataset.uploadForm;
          const keyInput = form.querySelector(`input[name='${type}_key']`);
          if (keyInput) {
            keyInput.value = data[`${type}_key`] ?? "";
          }
        });
        if (summaryForm) {
          const textarea = summaryForm.querySelector("textarea[name='summary']");
          if (textarea) textarea.value = data.summary ?? "";
        }
      } catch (error) {
        updateAssetText("avatar", null);
        updateAssetText("photo", null);
        updateAssetText("resume", null);
      }
    };

    const bindUploads = () => {
      uploadForms.forEach((form) => {
        form.addEventListener("submit", async (event) => {
          event.preventDefault();
          const type = form.dataset.uploadForm;
          const statusEl = form.querySelector(`[data-upload-status='${type}']`);
          const input = form.querySelector("input[type='file']");
          const keyInput = form.querySelector(`input[name='${type}_key']`);
          if (!input || !input.files || input.files.length === 0) {
            if (statusEl) statusEl.textContent = "Select a file first.";
            return;
          }

          if (statusEl) statusEl.textContent = "Uploading...";

          const formData = new FormData();
          formData.append("file", input.files[0]);

          try {
            const response = await fetch(`/api/uploads/${type}`, {
              method: "POST",
              body: formData,
            });

            if (!response.ok) {
              throw new Error("Upload failed");
            }

            const json = await response.json();
            if (statusEl) statusEl.textContent = `Uploaded. Save changes.`;
            if (json.key) {
              if (keyInput) keyInput.value = json.key;
              updateAssetText(type, json.key);
            }
            input.value = "";
            showToast("Upload completed. Save changes.", "success");
          } catch (error) {
            if (statusEl) statusEl.textContent = "Upload failed.";
            showToast("Upload failed.", "error");
          }
        });
      });
    };

    const buildProfilePayload = () => {
      const textarea = summaryForm?.querySelector("textarea[name='summary']");
      const payload = {
        summary: textarea ? textarea.value : "",
      };
      uploadForms.forEach((form) => {
        const type = form.dataset.uploadForm;
        const keyInput = form.querySelector(`input[name='${type}_key']`);
        if (type && keyInput?.value) {
          payload[`${type}_key`] = keyInput.value;
        }
      });
      return payload;
    };

    const bindProfileSave = () => {
      if (!profileSaveButton) return;
      profileSaveButton.addEventListener("click", async () => {
        if (profileSaveStatus) profileSaveStatus.textContent = "Saving...";
        try {
          const response = await fetch("/api/profile-assets", {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(buildProfilePayload()),
          });
          if (!response.ok) throw new Error("Failed");
          if (profileSaveStatus) profileSaveStatus.textContent = "Saved.";
          showToast("Profile updated.", "success");
        } catch (error) {
          if (profileSaveStatus) profileSaveStatus.textContent = "Failed to save.";
          showToast("Profile update failed.", "error");
        }
      });
    };

    let renderBlogPreview = () => {};

    const bindMarkdownPreview = () => {
      if (!blogPreview || !blogForm) return;
      const textarea = blogForm.querySelector("#blog-content");
      if (!textarea) return;

      const render = () => {
        const value = textarea.value || "";
        const raw = value ? marked.parse(value, { mangle: false, headerIds: false }) : "";
        blogPreview.innerHTML = value ? DOMPurify.sanitize(raw) : "Preview will appear here.";
      };

      renderBlogPreview = render;
      textarea.addEventListener("input", render);
      render();
    };

    const bindCertUpload = () => {
      if (!certForm || !certUploadButton) return;
      const fileInput = certForm.querySelector("input[name='cert_file']");
      const fileKeyInput = certForm.querySelector("input[name='file_key']");
      certUploadButton.addEventListener("click", async () => {
        if (!fileInput || !fileInput.files || fileInput.files.length === 0) {
          if (certUploadStatus) certUploadStatus.textContent = "Select a file first.";
          return;
        }
        if (certUploadStatus) certUploadStatus.textContent = "Uploading...";
        const formData = new FormData();
        formData.append("file", fileInput.files[0]);
        try {
          const response = await fetch("/api/uploads/certificate", {
            method: "POST",
            body: formData,
          });
          if (!response.ok) throw new Error("Upload failed");
          const json = await response.json();
          if (fileKeyInput) fileKeyInput.value = json.key ?? "";
          if (certFileCurrent) certFileCurrent.textContent = json.key ? `File: ${json.key}` : "";
          if (certUploadStatus) certUploadStatus.textContent = "Uploaded.";
          fileInput.value = "";
          showToast("Certificate uploaded.", "success");
        } catch (error) {
          if (certUploadStatus) certUploadStatus.textContent = "Upload failed.";
          showToast("Certificate upload failed.", "error");
        }
      });
    };

    bindUploads();
    bindProfileSave();
    bindMarkdownPreview();
    bindCertUpload();
    fetchAndBind();
    fetchProfileAssets();
  </script>
</Layout>
