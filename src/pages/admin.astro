---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Navbar />
  <main class="mx-auto w-full max-w-6xl px-6 py-16">
    <section class="rounded-3xl border border-slate-200 bg-white p-10 shadow-sm">
      <div class="flex flex-wrap items-center justify-between gap-6">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
            Admin Dashboard
          </p>
          <h1 class="mt-3 font-display text-3xl font-semibold text-slate-900">
            Manage projects and blog content.
          </h1>
          <p class="mt-3 max-w-2xl text-slate-600">
            This area will be protected by Cloudflare Access. Connect the CRUD endpoints to
            manage content and updates.
          </p>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-slate-50 px-5 py-4 text-sm text-slate-600">
          Status: <span class="font-semibold text-slate-900">Setup pending</span>
        </div>
      </div>

      <div class="mt-10 grid gap-6 md:grid-cols-2">
        <div class="rounded-2xl border border-slate-200 p-6">
          <h2 class="font-display text-lg font-semibold text-slate-900">
            Projects Queue
          </h2>
          <p class="mt-2 text-sm text-slate-600">
            Connect the D1 database and create new project entries.
          </p>
          <button
            class="mt-6 inline-flex items-center gap-2 rounded-full bg-slate-900 px-5 py-2 text-sm font-semibold text-white"
            type="button"
          >
            New Project
            <iconify-icon icon="ph:plus-bold"></iconify-icon>
          </button>
        </div>
        <div class="rounded-2xl border border-slate-200 p-6">
          <h2 class="font-display text-lg font-semibold text-slate-900">
            Blog Drafts
          </h2>
          <p class="mt-2 text-sm text-slate-600">
            Draft, edit, and publish new technical articles.
          </p>
          <button
            class="mt-6 inline-flex items-center gap-2 rounded-full border border-slate-300 px-5 py-2 text-sm font-semibold text-slate-700"
            type="button"
          >
            Create Draft
            <iconify-icon icon="ph:note-pencil-bold"></iconify-icon>
          </button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
