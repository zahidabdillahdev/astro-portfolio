<section class="mx-auto w-full max-w-6xl px-6 py-16" id="tools">
  <div class="flex flex-wrap items-end justify-between gap-6">
    <div class="space-y-3">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
        Tool Stack
      </p>
      <h2 class="font-display text-3xl font-semibold text-white">
        Trusted tooling for dependable delivery.
      </h2>
      <p class="max-w-2xl text-slate-300">
        I select tools that are proven in production, easy to operate, and well-supported.
      </p>
    </div>
  </div>

  <div class="mt-10 grid grid-cols-3 gap-4 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6" data-tools-grid>
    <div class="rounded-3xl border border-slate-800 bg-slate-900/60 p-6 text-sm text-slate-400">
      Tool stack will be listed once available.
    </div>
  </div>
</section>

<script>
  const grid = document.querySelector("[data-tools-grid]");

  const buildCard = (tool) => {
    const card = document.createElement("div");
    card.className =
      "group aspect-square w-20 rounded-2xl border border-slate-800 bg-slate-900/60 p-3 shadow-sm transition hover:border-slate-500 hover:bg-slate-800/80";

    const iconWrap = document.createElement("span");
    iconWrap.className =
      "flex h-full w-full items-center justify-center rounded-xl bg-slate-800 text-4xl transition group-hover:bg-slate-200 group-hover:text-slate-900";

    const icon = document.createElement("iconify-icon");
    icon.setAttribute("icon", tool.icon || "ph:app-window");
    iconWrap.append(icon);
    card.append(iconWrap);
    return card;
  };

  const loadTools = async () => {
    if (!grid) return;
    try {
      const response = await fetch("/public/tools");
      if (!response.ok) throw new Error("Failed");
      const json = await response.json();
      const items = json.data ?? [];

      if (!items.length) return;
      grid.innerHTML = "";
      items.forEach((item) => grid.append(buildCard(item)));
    } catch (error) {
      // Keep placeholder
    }
  };

  loadTools();
</script>
