<section class="relative overflow-hidden" id="home">
  <div class="absolute inset-0 -z-10">
    <div class="absolute -left-24 top-24 h-72 w-72 rounded-full bg-slate-800/60 blur-3xl"></div>
    <div class="absolute right-0 top-0 h-80 w-80 rounded-full bg-slate-700/40 blur-3xl"></div>
    <div class="absolute bottom-0 left-1/3 h-64 w-64 rounded-full bg-slate-900/60 blur-3xl"></div>
  </div>

  <div class="mx-auto w-full max-w-6xl px-6 pb-16 pt-20">
    <div class="mx-auto mb-8 flex h-16 w-16 items-center justify-center overflow-hidden rounded-full border border-slate-800 bg-slate-900/60">
      <span class="text-xs text-slate-500">Avatar</span>
    </div>
    <div class="space-y-8 text-center">
      <div class="space-y-5 animate-fade-up animate-delay-100">
        <h1 class="font-display text-4xl font-semibold leading-tight text-white md:text-5xl">
          Building dependable cloud systems that teams can grow with.
        </h1>
        <p class="text-lg text-slate-300">
          I help teams plan, deliver, and operate cloud infrastructure with clear standards,
          sensible automation, and strong documentation.
        </p>
      </div>
      <div class="flex flex-wrap gap-4 animate-fade-up animate-delay-300">
        <a
          href="#projects"
          class="rounded-full bg-slate-100 px-6 py-3 text-sm font-semibold text-slate-900 transition hover:-translate-y-0.5 hover:bg-white"
        >
          View my projects
        </a>
        <a
          href="#"
          data-resume-link
          class="rounded-full border border-slate-700 px-6 py-3 text-sm font-semibold text-slate-200 transition hover:-translate-y-0.5 hover:border-slate-500 hover:text-white"
        >
          Download my resume
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  const resumeLink = document.querySelector("[data-resume-link]");
  const loadProfile = async () => {
    try {
      const response = await fetch("/data/profile-assets");
      if (!response.ok) throw new Error("Failed");
      const json = await response.json();
      if (!json.data) return;

      const resumeKey = json.data.resume_key;
      const resumeUrl = resumeKey ? `/media/${resumeKey}` : null;

      if (resumeLink && resumeUrl) {
        resumeLink.href = resumeUrl;
        resumeLink.setAttribute("target", "_blank");
        resumeLink.setAttribute("rel", "noreferrer");
      }
    } catch (error) {
      // Keep placeholder
    }
  };

  loadProfile();
</script>
